<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintRight_toRightOf="@id/game_layout"
        app:layout_constraintBottom_toTopOf="@id/game_layout"/>

    <LinearLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_margin="32dp">
        <TextView
            android:id="@+id/numbers"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:background="@drawable/empty_background_round"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/delete"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="CE"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/bad"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/n2"
                android:tag="2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/n3"
                android:tag="3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/n4"
                android:tag="4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/n5"
                android:tag="5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/n6"
                android:tag="6"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/n7"
                android:tag="7"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/n8"
                android:tag="8"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/n9"
                android:tag="9"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/n10"
                android:tag="10"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/n11"
                android:tag="11"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="11"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/n12"
                android:tag="12"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="12"
                android:background="@drawable/empty_background_round"
                android:padding="4dp"
                android:textColor="@color/second"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_margin="4dp"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@color/first"
        android:gravity="center"
        android:text="@string/information"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_add_24"
        app:tint="@color/first"
        android:backgroundTint="@color/accent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_check_24"
        app:tint="@color/first"
        android:backgroundTint="@color/accent"/>

</androidx.constraintlayout.widget.ConstraintLayout>